<div class="edit-task-container">
    <div>
        <p>name of task</p>
        <textarea id="name">{{name}}</textarea>
    </div>
    <div>
        <p>description of task</p>
        <textarea id="description">{{description}}</textarea>
    </div>
    <div>
        <p>priority of task</p>
        <select name="priority "id="priority">
            <option value="true" {{#if priority}}selected{{/if}}>High Priority</option>
            <option value="false" {{#unless priority}}selected{{/unless}}>Low Priority</option>
        </select>
    </div>
